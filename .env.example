# ==========================================
#  PROJECT CONFIGURATION
# ==========================================
PROJECT_NAME=game-market-pipeline

# ==========================================
#  AWS CREDENTIALS (Required for Cloud)
# ==========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# ==========================================
#  MINIO (Local Data Lake)
# ==========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
DATA_LAKE_BUCKET=rawg-lake

# ==========================================
#  RAWG API (Game Data Source)
# ==========================================
RAWG_API_KEY=your_rawg_api_key

# ==========================================
#  SNOWFLAKE (Cloud Data Warehouse)
# ==========================================
# These are used by Terraform and dbt
TF_VAR_snowflake_account_name=your_account_locator
TF_VAR_snowflake_username=your_username
TF_VAR_snowflake_password=your_password
SNOWFLAKE_ROLE=SYSADMIN
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
